{
    "server": {
        "service_id": "device_server_001",
        "service_name": "Device Management Server",
        "local_address": "0.0.0.0",
        "local_port": 9090,
        "discovery_port": 9091,
        "max_devices": 100,
        "heartbeat_interval": 5000,
        "device_timeout": 30000,
        "enable_auto_cleanup": true,
        "cleanup_interval": 60000,
        "log_level": "INFO",
        "log_file": "logs/device_server.log"
    },
    "communication": {
        "local_service": {
            "service_id": "device_server_001",
            "service_name": "Device Management Server",
            "version": "1.0.0"
        },
        "network": {
            "local_address": "0.0.0.0",
            "local_port": 9090,
            "discovery_port": 9091,
            "max_connections": 50
        }
    },
    "devices": {
        "camera": {
            "type": "camera",
            "capabilities": ["capture", "configure", "status", "control"],
            "max_instances": 10,
            "default_config": {
                "resolution": "1920x1080",
                "fps": 30,
                "exposure": "auto",
                "gain": "auto"
            }
        },
        "sensor": {
            "type": "sensor",
            "capabilities": ["read", "calibrate", "status", "configure"],
            "max_instances": 50,
            "default_config": {
                "sampling_rate": 1000,
                "calibration_enabled": true
            }
        },
        "robot": {
            "type": "robot",
            "capabilities": ["control", "status", "configure", "calibrate"],
            "max_instances": 5,
            "default_config": {
                "max_speed": 100,
                "safety_enabled": true
            }
        },
        "controller": {
            "type": "controller",
            "capabilities": ["control", "status", "configure"],
            "max_instances": 20,
            "default_config": {
                "control_mode": "position",
                "update_rate": 100
            }
        },
        "actuator": {
            "type": "actuator",
            "capabilities": ["control", "status", "configure"],
            "max_instances": 30,
            "default_config": {
                "max_force": 1000,
                "position_limits": [-100, 100]
            }
        }
    },
    "security": {
        "enable_authentication": false,
        "enable_encryption": false,
        "allowed_clients": [],
        "allowed_ips": []
    },
    "monitoring": {
        "enable_statistics": true,
        "statistics_interval": 10000,
        "enable_health_check": true,
        "health_check_interval": 30000,
        "enable_performance_monitoring": true
    },
    "storage": {
        "enable_data_logging": true,
        "log_directory": "logs/device_data",
        "max_log_size": "100MB",
        "max_log_files": 10,
        "enable_database": false,
        "database_config": {
            "type": "sqlite",
            "path": "data/device_server.db"
        }
    }
}
