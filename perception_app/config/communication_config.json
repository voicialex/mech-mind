{
    "service_discovery": {
        "local_address": "0.0.0.0",
        "discovery_port": 8081,
        "broadcast_interval": 2000,
        "enable_broadcast": true
    },
    "server": {
        "id": "device_server_001",
        "name": "Device Server",
        "address": "127.0.0.1",
        "port": 9090,
        "max_clients": 100,
        "client_timeout": 30000
    },
    "client": {
        "id": "device_client_001",
        "name": "Device Client",
        "address": "0.0.0.0",
        "port": 0,
        "enable_auto_reconnect": true,
        "max_reconnect_attempts": 10,
        "reconnect_interval": 5000,
        "connection_check_interval": 10000
    },
    "heartbeat": {
        "enable": true,
        "interval": 300,
        "timeout_multiplier": 3,
        "max_missed_responses": 3
    },
    "master_node": {
        "client_timeout_interval": 60000,
        "status_check_interval": 10000,
        "state_sync_interval": 5000,
        "enable_auto_cleanup": true
    },
    "message": {
        "max_payload_size": 65536,
        "message_timeout": 5000,
        "enable_crc_check": true
    }
}
